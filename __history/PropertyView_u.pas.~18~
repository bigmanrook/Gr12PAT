{$R *.dfm}

procedure TForm1.LoadProperties(Sender: TObject);
begin
//Use relationships and SQL to load Properties under user account attribute
with Database_dm.DataModule1 do
begin
qryP4A.SQL.Clear;
qryP4A.Open;
qryP4A.SQL.Add('SELECT Account.Account, Properties.Owner FROM Account INNER JOIN Properties ON Account.Account = Properties.Owner ORDER BY Property Number');
qry
qryP4A.Close;


end;
end;

end.
